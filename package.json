{
  "name": "yisu-hotel-monorepo",
  "private": true,
  "scripts": {
    "dev:admin": "pnpm --filter @yisu/admin dev",
    "dev:mobile": "pnpm --filter @yisu/mobile dev:h5",
    "dev:server": "pnpm --filter @yisu/server dev",
    "build:admin": "pnpm --filter @yisu/admin build",
    "build:mobile": "pnpm --filter @yisu/mobile build:h5",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,md}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
